.story-list-wrapper {
  padding: 10px;
}

.story-list {
  counter-reset: sectioncounter;
}

.story-list-item {
  &::before {
    counter-increment: sectioncounter;
    content: counter(sectioncounter);
    float: left;
  }

  .sli-content {
    margin-left: 30px;
  }
  .sli-extra-href {
    color: #333;
  }
  .sli-extra-info, .sli-url {
    font-size 12px;
    color: #999;
    margin: 5px 0;
  }

  .sli-extra-info a {
    color: #999
  }

  .sli-url {
    margin-left: 3px;
  }
}

.load-more-page {
  cursor: pointer;
}